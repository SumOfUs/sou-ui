{
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "options": {
        "trailingComma": "es5",
        "singleQuote": true,
        "parser": "babel"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "trailingComma": "es5",
        "singleQuote": true,
        "parser": "typescript"
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "parser": "css"
      }
    },
    {
      "files": ["*.scss", "*.sass"],
      "options": {
        "parser": "css"
      }
    }
  ]
}
